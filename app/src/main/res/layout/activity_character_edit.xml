<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterEditActivity">

    <ListView
        android:id="@+id/character_listview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:fadeScrollbars="true"
        android:scrollbars="vertical">


    </ListView>

    <ListView
        android:id="@+id/item_listview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"
        android:visibility="invisible">



    </ListView>

    <ListView
        android:id="@+id/spell_listview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignBottom="@+id/save_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="120dp"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"
        android:visibility="invisible">


    </ListView>

    <ListView
        android:id="@+id/weapon_listview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignBottom="@+id/save_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="120dp"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"
        android:visibility="invisible">


    </ListView>

    <EditText
        android:id="@+id/edit_character_stat"
        android:layout_width="match_parent"
        android:layout_height="501dp"
        android:layout_above="@+id/back_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:hint="Test"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/character_listview"
        android:layout_alignBottom="@+id/character_listview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="-46dp"
        android:gravity="center"
        android:text="Back" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="123dp"
        android:layout_height="69dp"
        android:layout_below="@+id/character_listview"
        android:layout_alignBottom="@+id/character_listview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="-120dp"
        android:gravity="center"
        android:text="Save Changes"
        android:visibility="invisible" />

    <Button
        android:id="@+id/add_to_list_button"
        android:layout_width="123dp"
        android:layout_height="69dp"
        android:layout_below="@+id/character_listview"
        android:layout_alignBottom="@+id/character_listview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="-113dp"
        android:gravity="center"
        android:text="Add Field"
        android:visibility="invisible" />

</RelativeLayout>