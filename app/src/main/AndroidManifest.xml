<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DnD_Character_Vault"
        tools:targetApi="31">
        <activity
            android:name=".AdminMenuActivity"
            android:exported="false" />
        <activity
            android:name=".WeaponCreateActivity"
            android:exported="false" />
        <activity
            android:name=".EditWeaponActivity"
            android:exported="false" />
        <activity
            android:name=".SpellCreateActivity"
            android:exported="false" />
        <activity
            android:name=".EditSpellActivity"
            android:exported="false" />
        <activity
            android:name=".ItemCreateActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.LOGIN_ACTIVITY_USER" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateAccountActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_ACCOUNT_ACTIVITY_USER" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LandingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.LANDING_ACTIVITY_USER" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CharacterSelectActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.USER_CHARACTER_SELECT" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CharacterCreateActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.CHARACTER_CREATE_ID" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CharacterEditActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.CHARACTER_EDIT_ID" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditItemActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ITEM_EDIT_ID" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>